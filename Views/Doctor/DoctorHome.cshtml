@model HealthProfilingSystem.Models.Doctor
@{
    ViewBag.Title = "Doctor Home";
}

<div style="margin-left:20%">
    <h2><u>Doctor's Profile</u></h2>
    <br />
    <img src="@Url.Content("~/Images/uploads/" + Model.Image)" height="120" width="120" alt="Picture not available" />
    <br />

    <table>
        <tr>
            <td width="100px"><strong>Name</strong></td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td><strong>NIC</strong></td>
            <td>@Model.NIC</td>
        </tr>
        <tr>
            <td><strong>Email</strong></td>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <td><strong>Address</strong></td>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <td><strong>Phone</strong></td>
            <td>@Model.Phone</td>
        </tr>
        <tr>
            <td><strong>Qualification</strong></td>
            <td>@Model.Qualification</td>
        </tr>
        <tr>
            <td><strong>Specialization</strong></td>
            <td>@Model.Specialization</td>
        </tr>

    </table>
    <h3><a href='@(Url.Action("SearchPatient", "Admin"))'><b>Search a Patient</b></a><br /></h3>
    
</div>
