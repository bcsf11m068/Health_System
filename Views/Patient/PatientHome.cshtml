@model HealthProfilingSystem.Models.Patient

@{
    ViewBag.Title = "Patient Home";
}

<div style="margin-left:15%">
    <h2>Patient's Profile</h2>
    <img src="@Url.Content("~/Images/uploads/" + Model.Image)" height="120" width="120" alt="Picture not available" /> 
    <br />
    
    <table>
        <tr>
            <td width="100px" ><strong>Name</strong></td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td><strong>NIC</strong></td>
            <td>@Model.NIC</td>
        </tr>
        <tr>
            <td><strong>Domicile</strong></td>
            <td>@Model.Domicile</td>
        </tr>
        <tr>
            <td><strong>Email</strong></td>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <td><strong>Address</strong></td>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <td><strong>Phone</strong></td>
            <td>@Model.Phone</td>
        </tr>
        
    </table>
    <h3><a href="#">Request Change</a></h3> 
    <h3><a href="#" style="">View Medical History</a></h3>
</div>
