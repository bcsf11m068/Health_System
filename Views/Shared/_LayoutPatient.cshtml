
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <title>@ViewBag.Title</title>
    
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <link rel="stylesheet" href="~/Content/layout.css" type="text/css" />
    <script type="text/javascript" src="~/Scripts/jquery.min.js"></script>
    <!-- Featured Slider Starts -->
    <script type="text/javascript" src="~/Scripts/jquery-s3slider.js"></script>
    <script type="text/javascript">
		$(document).ready(function() {
			$("#featured_slide_").s3Slider({
				timeOut:3000
			});
		});
    </script>
    <!-- Featured Slider Ends -->
</head>

<body id="top">
    <!-- ####################################################################################################### -->
    <!-- HEADER STARTS HERE -->

    <div class="wrapper row2">
        <div id="header" class="clear">
            <div class="fl_left">
                <h1><a href="index.html">Health Profiling System</a></h1>
                <p>Where all your health is recorded!</p>
            </div>
            <div class="fl_right">
                <form action="#" method="post" id="sitesearch">
                    <fieldset>
                        <legend>Site Search</legend>
                        <input type="text" />
                        <input type="image" src="Images/search.gif" id="search" alt="Search" />
                    </fieldset>
                </form>
                <p><a href='@Url.Action("Index","Home")'>Logout</a> | <a href='#'>Settings</a></p>
            </div>
        </div>
    </div>

    <!-- HEADER ENDS HERE ######################################################### -->
    <!-- ####################################################################################################### -->

    <div id="renderbody">
        @RenderBody()
    </div>

    <!-- ####################################################################################################### -->
    <!-- FOOTER STARTS HERE -->
    <div class="wrapper">
        <div id="footer" class="clear">
           
            <div id="copyright" class="clear">
                <p class="fl_left">Copyright &copy; 2015 - A <a href="#">Generation21</a> Product</p>
            </div>
        </div>
    </div>
    <!-- FOOTER ENDS HERE -->
    <!-- ####################################################################################################### -->
 
</body>
</html>